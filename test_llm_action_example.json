{
  "profile": "test-site-llm-verification",
  "url": "https://test-sitev2.vercel.app",
  "test_scenarios": [
    {
      "id": "TC_LLM_001",
      "priority": "MUST",
      "scenario": "회원가입 시 유효성 검증 통과 후 성공 메시지 표시",
      "steps": [
        {
          "description": "홈 페이지 접속",
          "action": "goto",
          "selector": "",
          "params": ["https://test-sitev2.vercel.app/#basics"]
        },
        {
          "description": "회원가입 탭 선택",
          "action": "click",
          "selector": "section#essential-features [role='tab']:has-text(\"회원가입\")",
          "params": []
        },
        {
          "description": "이메일 입력",
          "action": "fill",
          "selector": "#signup-email",
          "params": ["user@example.com"]
        },
        {
          "description": "비밀번호 입력",
          "action": "fill",
          "selector": "#signup-password",
          "params": ["Abcd1234!"]
        },
        {
          "description": "회원가입 버튼 클릭",
          "action": "click",
          "selector": "form:has(#signup-email) button[type='submit']",
          "params": []
        },
        {
          "description": "회원가입 성공 확인",
          "action": "llm",
          "selector": "",
          "params": [],
          "verify": {
            "expected": "회원가입이 성공적으로 완료되어야 함",
            "indicators": [
              "성공 메시지 또는 토스트가 표시됨 (예: '회원가입이 완료되었습니다', '가입 성공')",
              "로그인된 상태로 전환됨",
              "환영 메시지가 보임",
              "사용자 정보가 화면에 표시됨"
            ]
          }
        }
      ],
      "assertion": {
        "description": "회원가입 성공 검증은 LLM action으로 처리됨",
        "expected_outcome": "회원가입 성공",
        "success_indicators": []
      }
    },
